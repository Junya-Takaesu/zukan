<section class="cards">
  <% @pokemons.each do |pokemon| %>
    <div class="card">
      <div class="overlay">
        <span>しらべる</span>
      </div>
      <img class="image" loading="lazy" src="images/<%= "#{pokemon["pokemon_no"].to_s.rjust(3, "0")}.png" %>">
      <div class="content">
        <div class="name utterable" data-utterable-text="<%= pokemon["name"] %>"><%= pokemon["name"] %></div>
        <div class="attributes">
          <hr>
          <span class="attribute-header">のうりょく：</span>
          <span class="attribute-value">
            <% pokemon.abilities.each do |ability| %>
              <%= ability.ability_name %>
              <br>
            <% end %>
          </span>
          <hr>
          <span class="attribute-header">タイプ：</span>
          <span class="attribute-value">
            <% pokemon.types.each do |type| %>
              <%= type.type_name %>
              <br>
            <% end %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</section>
<script type="module" src="js/home/index.js"></script>
<%= erb :footer %>